<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>assembly</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/defs</directory>
      <outputDirectory>defs</outputDirectory>
      <includes>
        <include>**/*.yaml</include>
        <include>**/*.md</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/generated-api-artifacts</directory>
      <outputDirectory/>
      <includes>
        <include>swagger-all-${project.version}.yaml</include>
        <include>swagger-*.yaml</include>
        <include>*.json</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>


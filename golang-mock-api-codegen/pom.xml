<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <artifactId>golang-mock-pc</artifactId>
    <groupId>com.nutanix.nutanix-core.ntnx-api.golang-mock-pc</groupId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>golang-mock-api-codegen</artifactId>
  <modelVersion>4.0.0</modelVersion>
  <packaging>pom</packaging>

  <name>Mock API Client and Server SDKs</name>

  <dependencies>
    <dependency>
      <groupId>com.nutanix.nutanix-core.ntnx-api.golang-mock-pc</groupId>
      <artifactId>${api.defs}</artifactId>
      <version>${project.version}</version>
      <type>tar.gz</type>
    </dependency>
    <dependency>
      <groupId>com.google.protobuf</groupId>
      <artifactId>protobuf-java</artifactId>
    </dependency>
  </dependencies>

  <modules>
    <!-- Proto messages (from YAML) -->
    <module>golang-mock-protobuf-messages</module>
    <!-- Proto services: SKIPPED - using manually created cat_service.proto -->
    <!-- <module>golang-mock-protobuf-services</module> -->
    <!-- Java DTOs (from YAML) -->
    <module>golang-mock-java-dto-definitions</module>
    <!-- Java from Proto -->
    <module>golang-mock-proto-to-java</module>
    <!-- Mappers (Java DTO <-> Proto) -->
    <module>golang-mock-protobuf-mappers</module>
    <!-- Spring MVC interfaces -->
    <module>golang-mock-springmvc-interfaces</module>
    <!-- gRPC Client (final integration) -->
    <module>golang-mock-grpc-client</module>
    <!-- Go DTOs and interfaces -->
    <module>golang-mock-go-dto-definitions</module>
    <!-- <module>golang-mock-go-server-interfaces</module> -->
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>validate</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.nutanix.nutanix-core.ntnx-api.golang-mock-pc</groupId>
                  <artifactId>${api.defs}</artifactId>
                  <version>${project.version}</version>
                  <type>tar.gz</type>
                  <overWrite>false</overWrite>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/${api.defs}-${project.version}</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

